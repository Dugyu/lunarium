{
  "compilerOptions": {
    "types": ["node"],
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
  },
  "include": ["scripts", "src"],
  "references": [
    { "path": "../core/tsconfig.build.json" },
  ],
}
