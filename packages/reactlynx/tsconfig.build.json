{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",

    "jsx": "preserve",
    "jsxImportSource": "@lynx-js/react",

    "target": "ES2022",
    "lib": ["ES2022", "DOM"],

    "module": "ESNext",
    "moduleResolution": "bundler",

    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",

    "paths": {
      "@/*": ["./src/*"]
    },
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["**/*.test.ts", "**/__tests__/**"]
}
