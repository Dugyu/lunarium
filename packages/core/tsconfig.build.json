{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "sourceMap": true,
    "target": "ES2022",
    "lib": ["ES2022"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.test.ts", "**/__tests__/**"]
}
